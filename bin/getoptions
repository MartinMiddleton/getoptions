#!/bin/sh

set -eu

VERSION="v2.6.0-dev"
URL="https://github.com/ko1nksm/getoptions"
LICENSE="Creative Commons Zero v1.0 Universal"

# https://github.com/ko1nksm/readlinkf
readlinkf() {
	[ "${1:-}" ] || return 1
	max_symlinks=40
	CDPATH='' # to avoid changing to an unexpected directory

	target=$1
	[ -e "${target%/}" ] || target=${1%"${1##*[!/]}"} # trim trailing slashes
	[ -d "${target:-/}" ] && target="$target/"

	cd -P . 2>/dev/null || return 1
	while [ "$max_symlinks" -ge 0 ] && max_symlinks=$((max_symlinks - 1)); do
		if [ ! "$target" = "${target%/*}" ]; then
			case $target in
				/*) cd -P "${target%/*}/" 2>/dev/null || break ;;
				*) cd -P "./${target%/*}" 2>/dev/null || break ;;
			esac
			target=${target##*/}
		fi

		if [ ! -L "$target" ]; then
			target="${PWD%/}${target:+/}${target}"
			printf '%s\n' "${target:-/}"
			return 0
		fi

		# `ls -dl` format: "%s %u %s %s %u %s %s -> %s\n",
		#   <file mode>, <number of links>, <owner name>, <group name>,
		#   <size>, <date and time>, <pathname of link>, <contents of link>
		# https://pubs.opengroup.org/onlinepubs/9699919799/utilities/ls.html
		link=$(ls -dl -- "$target" 2>/dev/null) || break
		target=${link#*" $target -> "}
	done
	return 1
}

quote() {
	q="$2'" r=''
	while [ "$q" ]; do r="$r${q%%\'*}'\''" && q=${q#*\'}; done
	q="'${r%????}'" && q=${q#\'\'} && q=${q%\'\'}
	eval "$1=\${q:-\"''\"}"
}

# shellcheck disable=SC2004
tab2space() {
	[ ! "${1:-}" ] && cat && return 0
	TAB=$(printf '\t')

	prefix='' i=0
	while [ "$i" -lt "$1" ] && i=$(($i + 1)); do
		prefix="$prefix "
	done
	i=0

	while IFS= read -r line; do
		while [ "$line" ]; do
			case $line in ([!${TAB}]*) break; esac
			i=$(($i + 1)) line=${line#?}
		done
		while [ "$i" -gt 0 ] && i=$(($i - 1)); do
			line="${prefix}${line}"
		done
		printf '%s\n' "$line"
	done
}

self=$(readlinkf "$0")
[ "${self##*/}" = "getoptions" ] || return 0
lib="${self%/*/*}/lib"

INDENT='' BASE=1 ABBR=1 HELP=1

while [ $# -gt 0 ]; do
	case $1 in
		-[0-9]) INDENT=${1#?}; shift ;;
		--no-base) BASE=''; shift ;;
		--no-abbr) ABBR=''; shift ;;
		--no-help) HELP=''; shift ;;
		-v | --version) echo "$VERSION"; exit ;;
		-h | --help)
			# shellcheck disable=SC2016
			echo 'Usage: eval "$(getoptions <parser_definition> <parser_name> [arguments...])"'
			echo 'Usage: getoptions [ -<N> (N=0-9) ] [ --no-base ] [ --no-abbr ] [ --no-help ]'
			echo 'Usage: getoptions [ -h | --help | -v | --version ]'
			echo ''
			echo "URL: $URL"
			echo "License: $LICENSE"
			exit
			;;
		*) break
	esac
done

outlibs() {
	set -- cat
	[ "$BASE" ] && set -- "$@" "$lib/getoptions.sh"
	[ "$ABBR" ] && set -- "$@" "$lib/getoptions_abbr.sh"
	[ "$HELP" ] && set -- "$@" "$lib/getoptions_help.sh"

	if [ "$INDENT" ]; then
		"$@" | tab2space "$INDENT"
	else
		"$@"
	fi
}

echo "# ========================================================================"
echo "# getoptions: $URL ($VERSION)"
outlibs
echo "# ========================================================================"

for i; do
	quote i "$i"
	set -- "$@" "$i"
	shift
done

if [ $# -gt 0 ]; then
	echo "eval \"\$(getoptions $*)\""
fi
